{
  "appenders":{
    "access":{
      "type":"dateFile",
      "filename":"log/maskaccess.log",
      "pattern":"-yyyy-MM-dd",
      "category":"http"
    },
    "app":{
      "type":"file",
      "filename":"log/mask.log",
      "maxLogSize":10485760,
      "numBackups":3
    },
    "errorFile":{
      "type":"file",
      "filename":"log/maskerrors.log"
    },
    "errors":{
      "type":"logLevelFilter",
      "level":"ERROR",
      "appender":"errorFile"
    }
  },
  "categories":{
    "default":{
      "appenders":["app",
        "errors"
      ],
      "level":"DEBUG"
    },
    "http":{
      "appenders":["access"
      ],
      "level":"DEBUG"
    }
  }
}